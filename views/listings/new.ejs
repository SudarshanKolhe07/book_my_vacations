<%-layout("/layouts/boilerplate.ejs")%>
<div class="row mt-3">
    <div class="col-8 offset-2"><br>
    <h2>Create a new Listing!</h2>
    <form method="post" action="/listings" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="Enter catchy title" class="form-control" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Title Should not be empty.</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Discription</label>
            <textarea  name="listing[description]" class="form-control" required></textarea>
            <div class="invalid-feedback">Discription Should not be empty.</div>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="text" name="listing[price]" placeholder="1200" class="form-control" required>
            <div class="invalid-feedback">Enter a valid price.</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="text" name="listing[image]" placeholder="Enter url/link" class="form-control">
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="mb-3" >
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" placeholder="Enter location" class="form-control" required>
                    <div class="invalid-feedback">Location Should not be empty.</div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[location]" placeholder="India" class="form-control" required>
                    <div class="invalid-feedback">country Should not be empty</div>
                </div>
            </div>
        </div>
        <button class="btn btn-dark add-btn mt-3">Add</button><br><br>
    </form>
</div>
</div>
