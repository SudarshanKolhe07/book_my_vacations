<%layout("layouts/boilerplate.ejs")-%>
<div class="row">
  
<body>
    <div class="col-8 offset-2 mt-3">
    <h3>Listing Details!</h3>
    </div>

    <div class="col-6 offset-2">
    <div class="card">
        <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing.image">
    <div class="card-body">
      <p class="card-text"><b><%=listing.title%></b> <br>
        <%=listing.description%> <br>
        &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
        <%=listing.location%> <br>
        <%=listing.country%>    
    </p>
    </div>
    </div>
    <div class="btns">
    <a href="/listings/<%=listing._id%>/edit" class=" btn btn-dark add-btn ">Edit</a>

    <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
       <button class="btn btn-dark  offset-3">
        Delete
       </button>
    </form>
</div>
</body>
</div>
</div>
